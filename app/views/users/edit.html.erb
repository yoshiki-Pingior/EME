<h2 class="text-center pt-5 pb-3">Profile Edit</h2>

<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-md-6 offset-md-3">
  <%= form_with model: @user, local:true do |f| %>
  <div class="row">
    <div class="col-md-5">
      <div class="user_image">
        <%= attachment_image_tag @user, :image,fallback: "no_image.jpg", size: "300x250",style: "border-radius: 50%;" %>
        <%= f.attachment_field :image, placeholder: "画像アップロード" %>
      </div>
    </div>

    <div class="col-md-6">
      <table>
        <tr height="80px">
          <th><label style="width: 120px;">フリガナ</label></th>
            <td><%= f.text_field :last_name_kana,autofocus: true, placeholder: "セイ" %></td>
            <td><%= f.text_field :first_name_kana,autofocus: true, placeholder: "メイ" %></td>
        </tr>
        <tr height="80px">
          <th><label style="width: 120px;">名前</label></th>
            <td><%= f.text_field :last_name,autofocus: true, placeholder: "姓" %></td>
            <td><%= f.text_field :first_name,autofocus: true, placeholder: "名" %></td>
        </tr>
      </table>
      <table>
        <tr height="80px">
          <th><label style="width: 120px;">自己紹介</label></th>
            <td style="word-break: break-all;"><%= f.text_area :introduction, autofocus: true, placeholder: "自己紹介", :size => "50x5" %></td>
        </tr>
      </table>
    </div>

    <div class="col-md-5">
      <table>
        <tr>
          <th><label style="width: 40px;">経歴</label></th>
            <td style="word-break: break-all;"><%= f.text_area :career, autofocus: true, placeholder: "経歴", :size => "40x12" %></td>
        </tr>
      </table>
    </div>

    <div class="col-md-6">
    <table>
      <tr height="40px">
        <th><label style="width: 120px;">趣味</label></th>
          <td style="word-break: break-all;"><%= f.text_field :hobby, autofocus: true, placeholder: "趣味", :size => "47" %></td>
      </tr>
      <tr height="40px">
        <th><label style="width: 120px;">興味のある分野</label></th>
          <td style="word-break: break-all;"><%= f.text_field :interest_field, autofocus: true, placeholder: "興味のある分野", :size => "47" %></td>
      </tr>
      <tr height="40px">
        <th><label style="width: 120px;">休日の過ごし方</label></th>
          <td style="word-break: break-all;"><%= f.text_field :holiday, autofocus: true, placeholder: "休日の過ごし方", :size => "47" %></td>
      </tr>
      <tr height="40px">
        <th><label style="width: 120px;">資格</label></th>
          <td style="word-break: break-all;"><%= f.text_field :qualification, autofocus: true, placeholder: "資格", :size => "47" %></td>
      </tr>
      <tr height="40px">
        <th><label style="width: 120px;">自由欄</label></th>
          <td style="word-break: break-all;"><%= f.text_area :free_space, autofocus: true, placeholder: "自由欄", :size => "50x5" %></td>
      </tr>
    </table>
    <%= f.submit "変更を保存" %>
    </div>

  </div>
  <% end %>
</div>