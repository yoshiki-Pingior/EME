<div class='col-xs-9'>
  <div class="container pt-3">
   
   <table class='table'>
      <thead>
        <tr>
        <th></th>
        <th>名前</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user), class: "user_#{user.id}" do %>
            <%= attachment_image_tag user, :image, fallback: "no_image.jpg", size: "150x100" %>
          <% end %>
        </td>
        <td><%= user.last_name %><%= user.first_name %></td>
        
        <td id="follow_buttons_<%= user.id %>">
          <% if current_user != user %>
            <%= render '/relationships/index', user: user %>
          <% end %>
        </td>
        
        <td><%= link_to '詳細', user_path(user), class: "user_#{user.id}" %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>